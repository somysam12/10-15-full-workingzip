<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true"
    android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SilentMultiPanel"
            android:background="#7C3AED"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KingAndroid ImGui+Mod"
            android:background="#2563EB"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FractionLoader"
            android:background="#059669"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KingAndroid Java"
            android:background="#DC2626"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FireXcheats"
            android:background="#EA580C"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crozn Loader"
            android:background="#0891B2"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DuluxMod"
            android:background="#9333EA"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BgmiCheat"
            android:background="#16A34A"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FrozenFire"
            android:background="#0EA5E9"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

        <Button
            android:id="@+id/btn10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BeastCrown"
            android:background="#BE123C"
            android:textAllCaps="false"
            style="@style/DarkButton"/>

    </LinearLayout>
</ScrollView>